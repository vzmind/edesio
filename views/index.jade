extends layout

block body
  .chatBox(ng-controller='AppCtrl')
    .row
      .span4
        h3 Messages
        .well.message-spot
          p(ng-repeat='message in messages',
            ng-class='message.me',
            class='') {{message.user}}: {{message.text}}
        .messageBox
          .navbar-inner
            .chatForm
              form(ng-submit='sendMessage()',class='well form-search form-send-message')
                input(ng-model='message',class='span2 input-message', placeholder='Message')
                input(type='submit', value='Send', class='btn btn-success', style='margin-left: 10px;margin-top: 0')

  .TaskBox(ng-controller='taskCtrl')
    .jumbotron.text-center
      h3 Todo-aholic
      span.label.label-info 
    #todo-list.row
      .col-sm-4.col-sm-offset-4
        .checkbox("ng-repeat"="todo in todos")
          input("ng-click"="deleteTodo(todo._id)", type="checkbox") 
          {{ todo.text }}
            
    #todo-form.row
      .col-sm-8.col-sm-offset-2.text-center
        form
          .form-group
            input.form-control.input-lg.text-center("ng-model"="formData.text", placeholder="I want to buy a puppy that will love me forever", type="text")
          button.btn.btn-primary.btn-lg("ng-click"="createTodo()", type="submit") Add
  

    #changeNameModal.modal.hide.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-body
          h3 Change your name
          p Your current user name is {{name}}
          form(ng-submit='changeName()')
            input(ng-model='newName')
            input(type='submit', value='Change Name', class='btn btn-success',style='margin-left: 10px;')
            a(data-dismiss='modal',class='btn btn-danger',style='margin-left: 10px') Nevermind


