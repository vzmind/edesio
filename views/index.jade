extends layout

block body
  .chatBox(ng-controller='AppCtrl')
    .row
      .span4
        h3 Messages
        .well.message-spot
          p(ng-repeat='message in messages',
            ng-class='message.me',
            class='') {{message.user}}: {{message.text}}
        .messageBox
          .navbar-inner
            .chatForm
              form(ng-submit='sendMessage()',class='well form-search form-send-message')
                input(ng-model='message',class='span2 input-message', placeholder='Message')
                input(type='submit', value='Send', class='btn btn-success', style='margin-left: 10px;margin-top: 0')

  .TaskBox(ng-controller='AppCtrl')
    .row
      .span4
        h3 Tasks
        .well.task-spot
        .Taskform
          .navbar-inner
            .TaskForm
              form(ng-submit='createTask()',class='well form-search form-create-task')
                input(ng-model='message',class='span2 input-message', placeholder='Text')
                input(type='submit', value='Create', class='btn btn-success', style='margin-left: 10px;margin-top: 0')



    #changeNameModal.modal.hide.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-body
          h3 Change your name
          p Your current user name is {{name}}
          form(ng-submit='changeName()')
            input(ng-model='newName')
            input(type='submit', value='Change Name', class='btn btn-success',style='margin-left: 10px;')
