extends layout

block body
  .chatBox(ng-controller='AppCtrl')
    .row
      .span4
        h3 Chat Room
        .well.message-spot
          p(ng-repeat='message in messages',ng-class='message.me', class='') {{message.user}}: {{message.text}}
        #messageBox
          form(ng-submit='sendMessage()')
            .form-group
              input.form-control.input-lg.text-center(ng-model='message', placeholder='Message', type='text')
            button.btn.btn-success Send

    #changeNameModal.modal.hide.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-body
        h3 Change your name
        p Your current user name is {{name}}
        form(ng-submit='changeName()')
          input(ng-model='newName')
          input(type='submit', value='Change Name', class='btn btn-success',style='margin-left: 10px;')
          a(data-dismiss='modal',class='btn btn-danger',style='margin-left: 10px') Nevermind


  .TaskBox(ng-controller='taskCtrl')
    .row
      .span4
        h3 Tasks
        span.label.label-info 
        #todo-list.row
          .span3
            .checkbox("ng-repeat"="todo in todos")
              input("ng-click"="deleteTodo(todo._id)", type="checkbox") 
              {{ todo.text }}
                
        #todo-form.row
          .span4.text-center
            form
              .form-group
                input.form-control.input-lg.text-center("ng-model"="formData.text", placeholder="Enter your next task here", type="text")
              button.btn.btn-success("ng-click"="createTodo()", type="submit") Add
      

   

